{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node16",
    "allowJs": true,
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "types": []
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
